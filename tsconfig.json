{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "functions",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "serverless/types/*"
      ]
    }
  },
  "include": [
    "serverless/**/*", "webpack-config/dev.webpack.functions.js", "webpack-config/webpack.functions.js"
  ]
}